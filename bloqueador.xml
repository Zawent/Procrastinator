<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/spinner_apps"
        android:layout_width="372dp"
        android:layout_height="95dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toTopOf="@+id/edit_text_tiempo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_text_tiempo"
        android:layout_width="372dp"
        android:layout_height="56dp"
        android:layout_below="@id/spinner_apps"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="168dp"
        android:hint="Tiempo en minutos"
        app:layout_constraintBottom_toTopOf="@+id/boton_iniciar_bloqueo"
        app:layout_constraintEnd_toEndOf="@+id/boton_iniciar_bloqueo"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="@+id/boton_iniciar_bloqueo"
        app:layout_constraintTop_toBottomOf="@+id/spinner_apps" />

    <Button
        android:id="@+id/boton_iniciar_bloqueo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_text_tiempo"
        android:layout_marginStart="54dp"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="214dp"
        android:text="Iniciar Bloqueo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_tiempo" />


</androidx.constraintlayout.widget.ConstraintLayout>